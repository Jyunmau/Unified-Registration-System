<!--index.wxml-->
<view class="cu-card">
  <view wx:for="{{activityList}}" wx:key="{{index}}" class="cu-item shadow-blur">
    <view class="padding-xl radius shadow-blur bg-gradual-red margin-top" bindtap='entryCard' id='{{index}}'>
      <view class="text-white text-bold text-xl">{{activityList[index].name}}</view>
      <view class='content'>
        <view class="text-white margin-xs margin-top">{{activityList[index].publisher}}</view>
        <view class='cu-tag bg-green light sm round'>{{activityList[index].endTime}}</view>
      </view>
    </view>
  </view>
</view>